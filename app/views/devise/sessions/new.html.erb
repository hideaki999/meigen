<div class=sign_in_area>
  <div class="sign_in_area_header">
    <div class="sign_in_area_logo_app_title">
      <%= image_tag "k0257_7.png" %>
      <%= link_to "メイゲン", "/" %>
      </div>
      <h2 class="sign_in_title">Sign in</h2>
  </div>
  
  <div class=sign_in_inputarea>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email,:placeholder =>"メールアドレス", autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.password_field :password,:placeholder =>"パスワード", autocomplete: "new-password" %>
      </div>
      
      <!--< if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <= f.check_box :remember_me %>-->
      <!--    <= f.label :remember_me %>-->
      <!--  </div>-->
      <!--< end %>-->
      
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
</div>



